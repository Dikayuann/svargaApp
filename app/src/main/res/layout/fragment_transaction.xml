<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cream"
    tools:context=".MenuFragment">

    <!-- Header yang tidak bisa di-scroll -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Transaksi"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/header"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Konten yang dapat digulir (scroll) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/widgetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30.2dp"
                android:background="@drawable/rectangle3"
                app:layout_constraintTop_toTopOf="@id/content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:text="Alamat Pengantaran"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/locationLogo"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/outline_location_on_24_green"
                    app:layout_constraintTop_toBottomOf="@id/textAddress"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textAddressLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:text="Lokasi"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toBottomOf="@id/textAddress"
                    app:layout_constraintStart_toEndOf="@id/locationLogo"/>

                <TextView
                    android:id="@+id/textAddressStreet"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Jl. Sunan Kalijaga, No. 3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="11sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toBottomOf="@id/textAddressLoc"
                    app:layout_constraintStart_toEndOf="@id/locationLogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="Ganti"
                    android:textSize="13sp"
                    android:paddingHorizontal="23dp"
                    android:paddingVertical="7dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/textAddressStreet"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/widgetPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30.2dp"
                android:background="@drawable/rectangle3"
                app:layout_constraintTop_toBottomOf="@id/widgetAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:text="Promo Hari Ini"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/promoLogo"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/outline_location_on_24_green"
                    app:layout_constraintTop_toBottomOf="@id/textPromo"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textDiscon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:text="Diskon 20%"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="15sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toBottomOf="@id/textPromo"
                    app:layout_constraintStart_toEndOf="@id/promoLogo"/>

                <TextView
                    android:id="@+id/textDisconDesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Berlaku s/d 10 Oktober"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="11sp"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toBottomOf="@id/textDiscon"
                    app:layout_constraintStart_toEndOf="@id/promoLogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="Pakai"
                    android:textSize="13sp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/textDisconDesc"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
